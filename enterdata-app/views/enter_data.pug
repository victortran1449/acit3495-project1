doctype html
html
  head
    title Enter Player Data
  body
    h1 Enter a Player
    form(action="/enter_data", method="POST")
      label(for="name") Name:
      input(type="text", id="name", name="name", required)
      br
      label(for="points") Points:
      input(type="number", id="points", name="points", required)
      br
      button(type="submit") Submit

